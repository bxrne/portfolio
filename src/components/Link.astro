---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("inline-block text-black dark:text-white font-mono transition-colors hover:bg-black dark:hover:bg-white hover:text-white dark:hover:text-black px-1 -mx-1", underline && "underline decoration-1 underline-offset-2")}
  {...rest}>
  <slot/>
</a>
