---
interface Props {
  id: string;
  name: string;
  required?: boolean;
  label: string;
}

const { id, name, required = false, label, ...rest } = Astro.props;
---

<div class="flex items-center gap-1 text-sm">
  <input
    type="checkbox"
    id={id}
    name={name}
    class="custom-checkbox"
    required={required}
    {...rest}
  >
  <label for={id} class="text-black dark:text-white cursor-pointer">{label}</label>
</div>

<style>
  .custom-checkbox {
    position: relative;
    width: 1rem;
    height: 1rem;
    border: 2px solid black;
    background: transparent;
    cursor: pointer;
    appearance: none;
    outline: none;
    transition: all 0.2s ease;
  }

  .dark .custom-checkbox {
    border-color: white;
  }

  .custom-checkbox:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .dark .custom-checkbox:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .custom-checkbox:checked {
    background: black;
  }

  .dark .custom-checkbox:checked {
    background: white;
  }

  .custom-checkbox:checked::after {
    content: 'âœ“';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 0.75rem;
    font-weight: bold;
  }

  .dark .custom-checkbox:checked::after {
    color: black;
  }

  .custom-checkbox:focus {
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
  }

  .dark .custom-checkbox:focus {
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
  }
</style>