---
interface Props {
  id: string;
  name: string;
  required?: boolean;
  label: string;
}

const { id, name, required = false, label, ...rest } = Astro.props;
---

<div class="flex items-center gap-1 text-sm">
  <input
    type="checkbox"
    id={id}
    name={name}
    class="custom-checkbox"
    required={required}
    {...rest}
  >
  <label for={id} class="text-terminal-fg cursor-pointer">{label}</label>
</div>

<style>
  .custom-checkbox {
    position: relative;
    width: 1rem;
    height: 1rem;
    border: 1px solid rgb(42 49 74);
    background: transparent;
    cursor: pointer;
    appearance: none;
    outline: none;
    transition: all 0.2s ease;
  }

  .custom-checkbox:hover {
    background: rgba(61, 39, 24, 0.5);
  }

  .custom-checkbox:checked {
    background: rgb(255, 152, 56);
    border-color: rgb(255, 152, 56);
  }

  .custom-checkbox:checked::after {
    content: 'âœ“';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: rgb(6, 8, 15);
    font-size: 0.75rem;
    font-weight: bold;
  }

  .custom-checkbox:focus {
    box-shadow: 0 0 0 2px rgba(255, 152, 56, 0.3);
  }
</style>
