---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"projects">;
}

const { entry } = Astro.props;
---

<a 
  href={`/projects/${entry.slug}`} 
  class="group block border border-black dark:border-white p-4 hover:bg-neutral-50 dark:hover:bg-neutral-900 transition-colors h-full flex flex-col"
>
  <div class="flex-1">
    <div class="font-mono text-sm text-black dark:text-white font-bold mb-2">
      {entry.data.title}
    </div>
    <div class="text-xs text-neutral-600 dark:text-neutral-400 mb-3 line-clamp-3">
      {entry.data.description}
    </div>
  </div>
  <div class="flex items-center justify-between text-xs text-neutral-400 dark:text-neutral-600 font-mono pt-2 border-t border-neutral-200 dark:border-neutral-800">
    <span>{new Date(entry.data.date).toLocaleDateString("en-US", { year: "numeric", month: "short" })}</span>
    <span class="text-black dark:text-white opacity-0 group-hover:opacity-100 transition-opacity">â†’</span>
  </div>
</a>
